@model EasyFly.Models.SingleUserLog

@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html>

<body>

    <h2>Welcome @Model.FirstName @Model.LastName</h2>

    <p class="btn-bs-success"> @Html.ActionLink("Book A Flight!", "SearchForFlight", new { id = Model.S_UserID }) </p>

    <p class="btn-bs-success"> @Html.ActionLink("Cancel your Flight!", "CancelBooking", new { id = Model.S_UserID }) </p>

    <p class="btn-bs-success"> @Html.ActionLink("See your Flight History", "FlightHistory", new { id = Model.S_UserID }) </p>
    
    <p> @Html.ActionLink("Edit", "Edit", new { id = Model.S_UserID }) </p>

</body>
</html>
